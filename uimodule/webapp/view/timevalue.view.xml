 <mvc:View controllerName="ft.ui5.ftapp.controller.TimeValue"
  displayBlock="true"
  xmlns="sap.m"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns:l="sap.ui.layout"
  xmlns:f="sap.f"
  xmlns:card="sap.f.cards">
  <App id="idAppControl" >
    <pages>
      <Page title="{i18n>tv.apptitle}"
  		showNavButton="true"
  		navButtonPress="onNavBack">
        <content>
			<f:GridContainer id="demoGrid" class="sapUiSmallMargin" columnsChange=".onGridColumnsChange">
				<f:layout>
					<f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
				</f:layout>
				<f:layoutXS>
					<f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
				</f:layoutXS>
				<f:Card>
					<f:layoutData>
						<f:GridContainerItemLayoutData columns="6" />
					</f:layoutData>
					<f:header>
						<card:Header
							title="{i18n>explain.getassumption}"/>
					</f:header>
					<f:content>
						<l:VerticalLayout class="sapUiContentPadding">
							<l:HorizontalLayout class="sapUiContentPadding" >
								<Input
									id="inputStartva"
									type="Number"
									placeholder="100"
									value="{
											path:'/tvs/0/sv',
											type:'sap.ui.model.odata.type.Decimal',
											formatOptions:{minFractionDigits:0,maxFractionDigits:10}, 
											constraints:{minimum:0,precision:13,scale:3}
										}"
									valueLiveUpdate="true"
									class="sapUiSmallMarginBottom" />
								<Text text="{i18n>base.currency} {i18n>explain.attime}"/>
								<DatePicker
									id="datepickerStart"
									displayFormat="MM-y"
									change="handleChange"
									class="sapUiSmallMarginBottom"/>
							</l:HorizontalLayout>
							<l:HorizontalLayout class="sapUiContentPadding" >			
								<Text text="{i18n>explain.tobesimulated} {i18n>explain.attime}"/>
							<DatePicker
									id="datepickerEnd"
									displayFormat="MM-y"
									change="handleChange"
									class="sapUiSmallMarginBottom" />
							</l:HorizontalLayout>
							<l:HorizontalLayout class="sapUiContentPadding" >	
							<Text text="{i18n>explain.withpercyear} {i18n>explain.inflation} {i18n>explain.of}"/>
							<StepInput
									id="inputIrate"
									value="{/r}"
									displayValuePrecision="1"
									min="0"
									max="100"
									width="3px"
									step="1"
									change="onChange" />
							</l:HorizontalLayout>
							<Button text="{i18n>button.simulate}" type="Emphasized" press="doSimulation" />
						</l:VerticalLayout>
					</f:content>
				</f:Card>
				<f:Card>
					<f:layoutData>
						<f:GridContainerItemLayoutData minRows="4" columns="4" />
					</f:layoutData>
					<f:header>
						<card:Header title="{i18n>tv.tvoverview}" subtitle="{i18n>tv.tvsubtext}" />
					</f:header>
					<f:content>
						<List showSeparators="None" >
							<CustomListItem>
								<HBox alignItems="Center" justifyContent="SpaceBetween">
									<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
										<Title level="H3" text="{/from}" />
									</VBox>
									<ObjectStatus
										class="sapUiTinyMargin"
										text="{ parts: [{path: '/tvs/0/sv'},
                                				{path: 'i18n>base.currency'}],
                       						 	type: 'sap.ui.model.type.Currency',
												format: 'short'
												}"
										state= "None" />
								</HBox>
							</CustomListItem>
							<CustomListItem>
								<HBox alignItems="Center" justifyContent="SpaceBetween">
									<VBox class="sapUiSmallMarginBegin sapUiSmallMarginTopBottom" >
										<Title level="H3" text="{/to}" />
									</VBox>
									<ObjectStatus
										class="sapUiTinyMargin"
										text="{ parts: [{path: '/tvs/1/ev'},
                                				{path: 'i18n>base.currency'}],
                       						 	type: 'sap.ui.model.type.Currency'
												}"
										state= "None" />
								</HBox>
							</CustomListItem>
						</List>
					</f:content>
				</f:Card>
				
				
			</f:GridContainer>
        </content>
      </Page>
    </pages>
  </App>
</mvc:View>